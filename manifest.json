{
    "manifest_version": 3,
    "name": "Voice Tab Switcher",
    "version": "1.0",
    "description": "Allows seamless tab navigation using voice commands.say 'CHANGE NEXT' for the next tab and 'CHANGE BACK' for previous tab",
    "permissions": ["tabs", "activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
  }
  